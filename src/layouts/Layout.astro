---
import '@fontsource/dm-sans/400.css';
import '@fontsource/dm-sans/500.css';
import '@fontsource/dm-sans/700.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '@/components/Header.astro';
import SocialSidebar from '@/components/SocialSidebar.astro';
import EmailSidebar from '@/components/EmailSidebar.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W9MRJJPZG4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-W9MRJJPZG4');
    </script>
  </head>

  <body class="relative min-h-screen bg-primary-black text-white font-inter">
    <div
      class="fixed inset-0 -z-10 bg-gradient-to-br from-primary-black via-primary-blue-dark-muted to-primary-black"
    >
    </div>

    <Header />
    <SocialSidebar />
    <EmailSidebar />

    <main class="lg:px-16 xl:px-20">
      <slot />
    </main>

    <Footer />

    <style is:global>
      :root {
        color-scheme: dark;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
        font-family: 'Inter', system-ui, sans-serif;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
        overflow-x: hidden;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }

        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
  </body>
</html>
