---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-2 px-3 md:px-4 py-2 text-xs md:text-sm font-medium rounded-lg
  bg-transparent border border-gray-700
  hover:bg-gray-800
  transition-all duration-300 ${className || ''}`}
>
  <slot />
</a>
